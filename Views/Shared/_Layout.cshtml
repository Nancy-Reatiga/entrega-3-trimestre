 <!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/misestilos.css">

    <title>@ViewData["Title"] - App588</title>
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Home">App588</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Home">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Nosotros">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="cliente" asp-action="Index">Cliente</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privado">Privado</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Logout">Cerrar Sesion</a>
                            </li>
                        }

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Welcome">Inicie Sesion</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <main class="bg-primary">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="text-white-50 bg-dark p-3 d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <div><img class="col-12 col-md-8 col-lg-8 ico m-2" src="~/pic/github.png" alt=""></div>
            <div class="d-flex flex-column">
                <small>By Nancy Reatiga</small>
                <a href="#" class="link-light">nyreatigasena</a>
            </div>
        </div>
    </footer>


    <script src="~/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>